<form action="/tasks" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <p>Enter a new task:</p>
    <input type='text' name='Name'/><br/>
    <input type='text' name='Horsepower'/><br/>
    <fieldset>
    <legend>Choose your engine type:</legend>
    <div>
    <input type="checkbox" id="Combustion" name="Combustion" checked />
    <label for="Combustion">Combustion</label>
    </div>
    <div>
    <input type="checkbox" id="EV" name="EV" />
    <label for="EV">EV</label>
    </div>
</fieldset>
    <input type='submit'/>
</form>